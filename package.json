{
  "name": "@typeheim/rx-flow",
  "version": "0.0.8",
  "description": "Collection of reactive libraries to ease your life",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "run:build": "npx tsc",
    "run:bootstrap": "npx lerna bootstrap",
    "run:spec": "npx jest",
    "run:publish": "yarn clean:build && yarn install && yarn run:spec && yarn run:build && npx lerna publish && yarn clean:build && yarn install",
    "clean:build": "node prepare-build.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/typeheim/rx-flow.git"
  },
  "keywords": [
    "rx-flow",
    "fire-rx",
    "rxjs",
    "promise",
    "web",
    "front-end",
    "framework",
    "angular",
    "nest",
    "back-end",
    "ts"
  ],
  "author": {
    "name": "Dima Kolodko",
    "email": "dima@kolodko.pro",
    "url": "https://github.com/prowwid"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/typeheim/rx-flow/issues"
  },
  "homepage": "https://github.com/typeheim/rx-flow#readme",
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^13.13.0",
    "@types/reflect-metadata": "^0.1.0",
    "jest": "^25.5.4",
    "lerna": "^3.20.2",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  },
  "jest": {
    "clearMocks": true,
    "automock": false,
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/specs/$1"
    ],
    "testRegex": ".spec.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "rootDir": "./",
    "moduleNameMapper": {
      "@typeheim/fire-rx": "<rootDir>/packages/fire-rx"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.json"
      }
    }
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.4.0"
  }
}
